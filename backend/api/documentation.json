                "$ref": "#/components/schemas/User"
              },
              "example": {
                "username": "john_doe",
                "email": "john_doe+ourApp@gmail.com",
                "password": "86bbad77affad64e370e576118820927a2848c7b2095ac039a770e425e15fba9c0bf9749a5281d11ecedaa52c15a2d9c050986e21898c6e691bbd64fd26dba73"
